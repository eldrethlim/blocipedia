<!-- app/views/pages/_form.html.erb -->

<%=form_for [wiki, page] do |f| %>
  <% if page.errors.any? %>
    <div class="alert alert-danger">
      <h4> There are <%= pluralize(page.errors.count, "error") %>.</h4>
      <ul>
        <% page.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label "Page Name" %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter page name" %>
  </div>

  <div class="form-group">
    <div id="epiceditor"></div>

    <%= f.text_area :body, class: 'form-control hidden' %>
  </div>

  <div class="form-group">
    <%= f.submit "Save Page", class: 'btn btn-success' %>
  </div>
<% end %>