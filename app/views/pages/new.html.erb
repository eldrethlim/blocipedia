<!-- app/views/pages/new.html.erb -->

<h2><%= link_to @wiki.name, wiki_path(@wiki) %></h2>

<h1> Create a new page for <%= @wiki.name %> </h1>

<p> Enter your new page details </p>

<%= form_for [@wiki, @page] do |f| %>
  <% if @page.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @page.errors.full_messages each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group"
    <%= f.label 'Page Name:' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter new page name' %>
  </div>

  <div class="form-group">
    <%= f.submit "Create new page", class: 'btn btn-success' %>
  </div>
<% end %>