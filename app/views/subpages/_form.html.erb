<!-- app/views/pages/_form.html.erb -->

<%=form_for [wiki, page, subpage] do |f| %>
  <% if subpage.errors.any? %>
    <div class="alert alert-danger">
      <h4> There are <%= pluralize(subpage.errors.count, "error") %>.</h4>
      <ul>
        <% subpage.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>You are creating a subpage for <%= f.label "#{title}" %></p>

  <div class="form-group">
    <%= f.label "Sub-page Name" %>
    <%= f.text_field :name, class: 'form-control', placeholder: "Enter page name" %>
  </div>

  <div class="form-group epiceditor">
    <%= f.label "Sub-page Contents" %>
    <%= f.text_area :body, class: 'form-control my-edit-area' %>
  </div>
  <script src="js/epiceditor.js"></script>
  <script>
    var opts = {
      container: 'epiceditor',
      textarea: 'textarea',
      basePath: 'epiceditor',
      clientSideStorage: true,
      localStorageName: 'epiceditor',
      useNativeFullscreen: true,
      parser: marked,
      file: {
        name: 'epiceditor',
        defaultContent: '',
        autoSave: 100
      },
      theme: {
        base: 'assets/stylesheets/base/epiceditor.css',
        preview: 'assets/stylesheets/github.css',
        editor: 'assets/stylesheets/epic-dark.css'
      },
      button: {
        preview: true,
        fullscreen: true,
         bar: "auto"
      },
      focusOnLoad: false,
      shortcut: {
        modifier: 18,
        fullscreen: 70,
        preview: 80
      },
      string: {
        togglePreview: 'Toggle Preview Mode',
        toggleEdit: 'Toggle Edit Mode',
        toggleFullscreen: 'Enter Fullscreen'
      },
      autogrow: true
    }
    window.onload=function(){
    var editor = new EpicEditor().load();
    }
  </script>
  <div class="form-group">
    <%= f.submit "Save Sub-page", class: 'btn btn-success' %>
  </div>
<% end %>