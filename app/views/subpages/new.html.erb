<!-- app/views/pages/new.html.erb -->

<h2> <%= link_to @page.name, wiki_page_path(@wiki, @page) %></h2>

<h1> Create a new subpage for <%= @page.name %> </h1>

<p> Enter your new subpage details </p>

<%= form_for [@wiki, @page, @subpage] do |f| %>
  <% if @subpage.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @subpage.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group"
    <%= f.label 'Sub-Page Name:' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter new sub-page name' %>
  </div>

  <div class="form-group">
    <%= f.submit "Create new sub-page", class: 'btn btn-success' %>
  </div>
<% end %>